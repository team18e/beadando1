<h1>ToDo felvétele</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
      method="post" action="/add">
  <fieldset>
    <div class="form-group">
      <label for="mit" class="col-lg-2 control-label">Mit: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="mit" id="mit" 
               placeholder="Tankolni">
      </div>
    </div>
    <div class="form-group">
      <label for="mikor" class="col-lg-2 control-label">Mikor: </label>
      <div class="col-lg-10">
        <input type="date" class="form-control" 
               name="mikor" id="mikor"
              placeholder="1988.05.23.">
      </div>
    </div>
	<div class="form-group">
      <label for="ki" class="col-lg-2 control-label">Ki: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="ki" id="ki" 
               placeholder="Fátter">
      </div>
    </div>
	<div class="form-group">
      <label for="surgos" class="col-lg-2 control-label">Sürgős*: </label>
      <div class="col-lg-10">
        <table>
          <tr>
            <td class="col-lg-3">
              <input type="checkbox" class="form-control" name="surgos" id="surgos">
            </td>
            <td class="col-lg-3">
              <p style="font-size: 12px; float: right">(Sürgős teendő esetén bejelölni!)</p>
            </td>
          </tr>
        </table>
      </div>
    </div>
	
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default pull-left">Mégse</button>
        <button type="submit" class="btn btn-success pull-right">ToDo rögzítése</button>
      </div>
    </div>
  </fieldset>
</form>
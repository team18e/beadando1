<h1>ToDo lista</h1>
<div class="panel">
  <form method="get" action="/list" >
    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-2">
        <input type="string" class="form-control" 
               name="query" id="search" 
               {{#if query}}
               value="{{query}}"
               {{/if}}
               placeholder="ToDo pontos neve">
      </div>
      <div class="col-lg-2">
        <input type="submit" class="btn btn-info" value="Keresés">
      </div>
    </div>
  </form>
</div>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Mit</th>
      <th>Mikor</th>
	  <th>Ki</th>
    </tr>
  </thead>
  <tbody>
    {{#each data as |targy|}}
		{{#if targy.surgos }}
			<tr style="color: black" bgcolor="yellow">
			  <td>{{targy.mit}}</td>
			  <td>{{targy.mikor}}</td>
			  <td>{{targy.ki}}</td>
			  <td>
			    <a type="submit" class="btn-xs btn-warning pull-right" href="/edit/{{targy.id}}">Szerkesztés</a>
			  </td>
			  <td>
			    <a type="submit" class="btn-xs btn-danger pull-right" href="/delete/{{targy.id}}">Törlés</a>
			  </td>
			</tr>
		{{else}}
			<tr style="color: grey">
			  <td>{{targy.mit}}</td>
			  <td>{{targy.mikor}}</td>
			  <td>{{targy.ki}}</td>
			  <td>
			    <a type="submit" class="btn-xs btn-warning pull-right" href="/edit/{{targy.id}}">Szerkesztés</a>
			  </td>
			  <td>
			    <a type="submit" class="btn-xs btn-danger pull-right" href="/delete/{{targy.id}}">Törlés</a>
			  </td>
			</tr>
		{{/if}}
    {{/each}}
  </tbody>
</table> 
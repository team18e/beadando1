<div class="page-header">
    <h1>Bejelentkezés</h1>
</div>

<form class="form-horizontal" method="post" action="/auth/login">
    <fieldset>
        <div class="form-group">
            <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
                <input class="form-control" id="username" name="username" type="text" value="{{data.username}}">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégsem</button>
                <button type="submit" class="btn btn-success">Bejelentkezek</button>
            </div>
        </div>
    </fieldset>
</form>

<div>
  <a href="/auth/signup" class="col-lg-10 col-lg-offset-2 btn btn-warning">Regisztráció</a>
</div>